{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/hashicorp-forge/hermes/schemas/projects-v1.json",
  "title": "Hermes Projects Configuration",
  "description": "Schema for Hermes distributed project configuration",
  "type": "object",
  "required": ["version", "projects"],
  "properties": {
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+(-[a-z]+)?$",
      "description": "Schema version (semver)"
    },
    "projects": {
      "type": "array",
      "description": "Array of project configurations",
      "items": {
        "$ref": "#/definitions/project"
      }
    }
  },
  "definitions": {
    "project": {
      "type": "object",
      "required": ["projectId", "title", "status", "providers"],
      "properties": {
        "projectId": {
          "type": "string",
          "pattern": "^[a-z0-9][a-z0-9-]*[a-z0-9]$",
          "description": "Unique project identifier (kebab-case)",
          "minLength": 3,
          "maxLength": 64
        },
        "title": {
          "type": "string",
          "description": "Human-readable project title",
          "minLength": 1,
          "maxLength": 200
        },
        "friendlyName": {
          "type": "string",
          "description": "Friendly name used in document titles (not globally unique)",
          "maxLength": 200
        },
        "tla": {
          "type": "string",
          "description": "Three-letter acronym (not globally unique)",
          "pattern": "^[A-Z]{2,10}$"
        },
        "description": {
          "type": "string",
          "description": "Project description"
        },
        "status": {
          "type": "string",
          "enum": ["active", "completed", "archived"],
          "description": "Project status"
        },
        "providers": {
          "type": "array",
          "description": "Array of providers (supports multiple during migration)",
          "minItems": 1,
          "items": {
            "$ref": "#/definitions/provider"
          }
        },
        "metadata": {
          "$ref": "#/definitions/metadata"
        }
      }
    },
    "provider": {
      "type": "object",
      "required": ["type", "config"],
      "properties": {
        "type": {
          "type": "string",
          "enum": ["local", "google", "remote-hermes"],
          "description": "Provider type"
        },
        "migrationStatus": {
          "type": "string",
          "enum": ["active", "source", "target", "archived"],
          "default": "active",
          "description": "Migration role for this provider"
        },
        "migrationStartedAt": {
          "type": "string",
          "format": "date-time",
          "description": "When migration started (if applicable)"
        },
        "migrationCompletedAt": {
          "type": "string",
          "format": "date-time",
          "description": "When migration completed (if applicable)"
        },
        "config": {
          "type": "object",
          "description": "Provider-specific configuration",
          "oneOf": [
            { "$ref": "#/definitions/localProviderConfig" },
            { "$ref": "#/definitions/googleProviderConfig" },
            { "$ref": "#/definitions/remoteHermesProviderConfig" }
          ]
        }
      }
    },
    "localProviderConfig": {
      "type": "object",
      "required": ["workspacePath"],
      "properties": {
        "workspacePath": {
          "type": "string",
          "description": "Path to local workspace directory (relative or absolute)"
        },
        "gitRepository": {
          "type": "string",
          "format": "uri",
          "description": "Git repository URL"
        },
        "gitBranch": {
          "type": "string",
          "description": "Git branch name",
          "default": "main"
        },
        "allowedFileExtensions": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Allowed file extensions for indexing"
        },
        "indexingEnabled": {
          "type": "boolean",
          "default": true
        },
        "publicReadAccess": {
          "type": "boolean",
          "default": false,
          "description": "Whether this project's documents are publicly readable"
        }
      }
    },
    "googleProviderConfig": {
      "type": "object",
      "required": ["workspaceId"],
      "properties": {
        "workspaceId": {
          "type": "string",
          "description": "Google Workspace ID"
        },
        "sharedDriveIds": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Google Shared Drive IDs"
        },
        "serviceAccountEmail": {
          "type": "string",
          "format": "email",
          "description": "Service account email"
        },
        "credentialsPath": {
          "type": "string",
          "description": "Path to Google credentials JSON (should use env var in production)"
        },
        "indexingEnabled": {
          "type": "boolean",
          "default": true
        }
      }
    },
    "remoteHermesProviderConfig": {
      "type": "object",
      "required": ["hermesUrl", "apiVersion"],
      "properties": {
        "hermesUrl": {
          "type": "string",
          "format": "uri",
          "description": "URL of remote Hermes instance"
        },
        "apiVersion": {
          "type": "string",
          "enum": ["v1", "v2"],
          "description": "API version to use"
        },
        "authentication": {
          "type": "object",
          "properties": {
            "method": {
              "type": "string",
              "enum": ["oidc", "bearer", "api-key"]
            },
            "clientId": {
              "type": "string"
            },
            "tokenEndpoint": {
              "type": "string",
              "format": "uri"
            }
          }
        },
        "syncMode": {
          "type": "string",
          "enum": ["read-only", "bidirectional"],
          "default": "read-only"
        },
        "cacheTTL": {
          "type": "integer",
          "minimum": 0,
          "description": "Cache TTL in seconds"
        }
      }
    },
    "metadata": {
      "type": "object",
      "properties": {
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "owner": {
          "type": "string",
          "description": "Project owner/team"
        },
        "tags": {
          "type": "array",
          "items": { "type": "string" }
        },
        "notes": {
          "type": "string"
        }
      }
    }
  }
}
